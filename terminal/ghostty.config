# Ghostty config - $HOME/Library/Application Support/com.mitchellh.ghostty/config
# Ghostty online config editor: https://ghostty.zerebos.com/
# See https://ghostty.org/docs/config/reference for full list

title = ghostty
desktop-notifications = false
config-default-files = false
initial-window = true
working-directory = home
confirm-close-surface = false
quit-after-last-window-closed = true
shell-integration-features = cursor,sudo,title
quick-terminal-position = right
clipboard-read = allow
clipboard-write = allow
copy-on-select = clipboard
# theme = Nvim Dark
bold-is-bright = true
theme = Catppuccin Mocha
background = #1e1e2e
foreground = #cdd6f4
selection-background = #585b70
selection-foreground = #cdd6f4
cursor-color = #f5e0dc
cursor-text = #1e1e2e
palette = 0=#45475a
palette = 1=#f38ba8
palette = 2=#a6e3a1
palette = 3=#f9e2af
palette = 4=#89b4fa
palette = 5=#f5c2e7
palette = 6=#94e2d5
palette = 7=#a6adc8
palette = 8=#585b70
palette = 9=#f37799
palette = 10=#89d88b
palette = 11=#ebd391
palette = 12=#74a8fc
palette = 13=#f2aede
palette = 14=#6bd7ca
palette = 15=#bac2de
font-size = 19
font-family = JetBrainsMono Nerd Font Mono
mouse-hide-while-typing = true
background-opacity = 0.9
background-blur-radius = 70 
auto-update = off
auto-update-channel = stable
focus-follows-mouse = true
window-save-state = default
window-decoration = true
